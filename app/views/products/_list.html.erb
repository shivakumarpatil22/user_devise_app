<table class='table'>
  <thead>
    <%= link_to "New", new_product_path, class: "btn btn-primary"%><br>
    <tr>
      <th>Product Name</th>
      <th>Product Price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product_path(product.id) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pagination justify-content-end">
<%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</ul>